#!/bin/bash

# Warna
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color
CHECK="${GREEN}✔ RUNNING${NC}"
CROSS="${RED}✘ NOT RUNNING${NC}"

function check_service() {
    SERVICE=$1
    DISPLAY=$2

    if systemctl is-active --quiet "$SERVICE"; then
        echo -e "$DISPLAY: $CHECK"
    else
        echo -e "$DISPLAY: $CROSS"
    fi
}

echo "=============================="
echo "  VPN SERVICE STATUS"
echo "=============================="

check_service pptpd "PPTP"
check_service strongswan-starter "L2TP/IPSec"
check_service xl2tpd "L2TP Daemon"
check_service sstpd "SSTP"

echo "=============================="
